<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="First_Mobile_App.ProjectsPage"
             Title="Проекты">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="add.png" Priority="0" Order="Primary" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="lwProjects" ItemsSource="{Binding Projects}" ItemSelected="lwProjects_ItemSelected"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>